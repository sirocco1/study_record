<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= render 'layouts/errors', er: @task %>
			<h1>編集フォーム</h1>
			<%= form_for @task do |f| %>
			<div class="field row">
				<%= f.label :日付 %>
				<br>
				<%= f.date_field :day %>
			</div>
			<div class="field row">
				<%= f.label :学習時間 %>
				<br>
				<%= f.text_field :study_time %>
			</div>
			<div class="field row">
				<%= f.label :作業内容 %>
				<br>
				<%= f.text_area :study_body %>
			</div>
				<br>
			<div class="actions row">
				<%= f.submit class: "btn btn-primary col-md-8 col-md-offset-2" %>
			</div>
			<br>
		<% end %>
	</div>
</div>
